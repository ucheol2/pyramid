<h1 class="center">사랑합니다 고갱님</h1>
<div class="container">
  <div class="row">
    <%= form_tag users_path, class: 'col s12', method: :get, remote: true do %>
      <!--
      U shold add more input tags to submit various parameters
      Make it yourself!
      -->
      <div class="input-field">
        <input type="text" name="name" id="name">
        <label for="name">name</label>
      </div>

      <div class="right">
        <button class="btn waves-effect waves-light" type="submit" name="action">Search</button>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div id="user_list" class="col s12">
    <%= render partial: 'user_list', locals: {users: @users} %>
  </div>
</div>
